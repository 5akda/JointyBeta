<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="60dp"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="#eeeeee">

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:background="#EEB116"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:text="After Lunch Karaoke"
            android:textColor="#bb000000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/type0" />

        <TextView
            android:id="@+id/edescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="Event Information here"
            android:textAlignment="textStart"
            android:textColor="#eeffffff"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/elocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="Mega Bangna"
            android:textAlignment="textStart"
            android:textColor="#bb000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="MM/DD/YY - HH:MM"
            android:textColor="#bb000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="Participant: parzival48"
            android:textColor="#eeFFFFFF"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/ehost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:text="Creator: User696"
            android:textAlignment="textEnd"
            android:textColor="#bb000000"
            android:textSize="16dp"
            android:textStyle="bold" />


    </LinearLayout>

</android.support.v7.widget.CardView>