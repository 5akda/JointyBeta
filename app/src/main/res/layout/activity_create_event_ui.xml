<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".SignUpUI">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/multiline"
        android:layout_marginStart="50dp"
        android:layout_marginTop="2dp"
        android:text="Contact, Restrictions, etc. 0 - 140 Characters"
        android:textAlignment="textStart"
        android:textColor="#aaffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUsernameR9"
        android:layout_marginTop="2dp"
        android:layout_marginStart="50dp"
        android:text="Time, hh:mm Format"
        android:textAlignment="textStart"
        android:textColor="#aaffffff"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtUsernameR9"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="14dp"
        android:background="#66000000"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="mm"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#88ffffff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/txtUsernameR8"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="14dp"
        android:background="#66000000"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="hh"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#88ffffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUsernameR6"
        android:layout_marginTop="2dp"
        android:layout_marginStart="50dp"
        android:text="Date, DD-MM-YYYY Format"
        android:textAlignment="textStart"
        android:textColor="#aaffffff"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtUsernameR7"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="238dp"
        android:layout_marginTop="14dp"
        android:background="#66000000"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="YYYY"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#88ffffff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/txtUsernameR5"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="50dp"
        android:background="#66000000"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="DD"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#88ffffff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/txtUsernameR"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:background="#66000000"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Event Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#88ffffff"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/txtUsernameR2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="50dp"
        android:background="#66000000"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Location"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#88ffffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="[ Create Event ]"
        android:textAlignment="center"
        android:textColor="#ffFFC115"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUsernameR"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="2dp"

        android:text="5 - 30 Characters , Letters and Numbers"
        android:textAlignment="textStart"
        android:textColor="#aaffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUsernameR2"
        android:layout_marginTop="2dp"
        android:layout_marginStart="50dp"
        android:text="5 - 30 Characters , Letters and Numbers"
        android:textAlignment="textStart"
        android:textColor="#aaffffff"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:background="#ffFFC115"
        android:text="Create Account"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtUsernameR6"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="14dp"
        android:background="#66000000"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="MM"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#88ffffff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/multiline"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="50dp"
        android:background="#66000000"

        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#88ffffff"
        android:textSize="16dp" />

</RelativeLayout>