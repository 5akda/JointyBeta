<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".SignUpUI">

    <TextView
        android:id="@+id/timeView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btTime"
        android:layout_marginStart="11dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btTime"
        android:text="Select Time"
        android:textAlignment="textStart"
        android:textColor="#aaffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescription"
        android:layout_marginStart="30dp"
        android:layout_marginTop="2dp"
        android:text="Contact, Restrictions, etc. 0 - 140 Characters"
        android:textAlignment="textStart"
        android:textColor="#aaffffff"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtEventName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:background="#66000000"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Event Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#88ffffff"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/txtLocation"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="14dp"
        android:background="#66000000"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Location"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#88ffffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="[ Create Event ]"
        android:textAlignment="center"
        android:textColor="#ffFFC115"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEventName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="2dp"

        android:text="5 - 30 Characters"
        android:textAlignment="textStart"
        android:textColor="#aaffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLocation"
        android:layout_marginStart="30dp"
        android:layout_marginTop="2dp"
        android:text="5 - 30 Characters"
        android:textAlignment="textStart"
        android:textColor="#aaffffff"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btCreateEvent"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="#ffFFC115"
        android:text="Create Event"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/btTime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"

        android:layout_marginEnd="30dp"
        android:background="#66000000"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#88ffffff"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btDate"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorAccent"
        android:text=" Date Picker "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btDate"
        android:layout_marginStart="11dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btDate"
        android:text="Select Date"
        android:textAlignment="textStart"
        android:textColor="#aaffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btTime"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/btDate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorAccent"
        android:text=" Time Picker "
        android:textSize="16sp" />

</RelativeLayout>