<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popstat"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="#EEB116"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ccardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#12000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:text="After Lunch Karaoke"
            android:textColor="#bb000000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/type0" />

        <TextView
            android:id="@+id/cedescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="Event Information here"
            android:textAlignment="textStart"
            android:textColor="#eeffffff"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/celocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="Mega Bangna"
            android:textAlignment="textStart"
            android:textColor="#bb000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="MM/DD/YY - HH:MM"
            android:textColor="#bb000000"
            android:textSize="18dp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/cehost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:text="Creator: User696"
            android:textAlignment="textEnd"
            android:textColor="#bb000000"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="#33000000"
            android:clickable="true"
            android:text="Confirm"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="#33000000"
            android:clickable="true"
            android:text="cancle"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>